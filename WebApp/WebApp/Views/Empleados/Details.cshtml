@model Empleado

@{
    ViewData["Title"] = "Empleados";
    ViewData["SubTitle"] = "Detalle";
    string foto = "data:image/svg+xml;base64,";
    if (Model.Foto != null)
    {
        foto = "data:image;base64," + Convert.ToBase64String(Model.Foto);
    }
}

<div>
    <h4>Empleado</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Foto)
        </dt>
        <dd>
            <img src="@foto" width="100" />
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.EmpleadoID)
        </dt>
        <dd>
            @Model.EmpleadoID
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd>
            @Model.Nombre
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Direccion)
        </dt>
        <dd>
            @Model.Direccion
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Edad)
        </dt>
        <dd>
            @Model.Edad
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.EmpleadoID" class="btn btn-warning">Editar</a>
</div>
<hr />
<a asp-action="Index" class="btn btn-default">Regresar a la lista</a>
