<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
    <title>@ViewData["Title"]</title>

    <environment include="Development">
        <!-- Bootstrap -->
        <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
        <!-- Font Awesome -->
        <link href="~/lib/font-awesome/css/font-awesome.css" rel="stylesheet" />
        <!-- AdminLTE -->
        <link href="~/lib/admin-lte/css/AdminLTE.css" rel="stylesheet" />
        <link href="~/lib/admin-lte/css/skins/skin-blue.css" rel="stylesheet" />
        <!-- DataTables -->
        <link href="~/lib/datatables/css/jquery.dataTables.css" rel="stylesheet" />
        <link href="~/lib/datatables/css/dataTables.bootstrap.css" rel="stylesheet" />

        <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    </environment>

    <environment exclude="Development">
        <!-- Bootstrap -->
        <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
        <!-- Font Awesome -->
        <link href="~/lib/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
        <!-- AdminLTE -->
        <link href="~/lib/admin-lte/css/AdminLTE.min.css" rel="stylesheet" />
        <link href="~/lib/admin-lte/css/skins/skin-blue.css" rel="stylesheet" />
        <!-- DataTables -->
        <link href="~/lib/datatables/css/jquery.dataTables.min.css" rel="stylesheet" />
        <link href="~/lib/datatables/css/dataTables.bootstrap.min.css" rel="stylesheet" />

        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
    </environment>

    @RenderSection("Styles", required: false)
</head>
<body class="hold-transition fixed skin-blue sidebar-mini">
    <div class="wrapper">
        <!-- Main Header -->
        <header class="main-header">
            <!-- Logo -->
            <a asp-controller="Home" asp-action="Index" class="logo">
                <!-- mini logo for sidebar mini 50x50 pixels -->
                <span class="logo-mini">
                    <b>S</b>I
                    @*<img style="height: 50px;" src="https://via.placeholder.com/180x180?text=Logo">*@
                </span>
                <!-- logo for regular state and mobile devices -->
                <span class="logo-lg">
                    <b>S</b>istema Informatico
                </span>
            </a>
            <!-- Header Navbar: style can be found in header.less -->
            <nav class="navbar navbar-static-top">
                <!-- Sidebar toggle button-->
                <a href="#" class="sidebar-toggle" data-toggle="push-menu" role="button">
                    <span class="sr-only">Toggle navigation</span>
                </a>
                <div class="navbar-custom-menu">
                    <ul class="nav navbar-nav">
                        <!-- Messages: style can be found in dropdown.less-->
                        <partial name="_Messages" />
                        <!-- Notifications: style can be found in dropdown.less -->
                        <partial name="_Notifications" />
                        <!-- Tasks: style can be found in dropdown.less -->
                        <partial name="_Task" />
                        <!-- User Account: style can be found in dropdown.less -->
                        <partial name="_LoginPartial" />
                        <!-- Control Sidebar Toggle Button -->
                        <li>
                            <a href="#" data-toggle="control-sidebar"><i class="fa fa-gear"></i></a>
                        </li>
                    </ul>
                </div>
            </nav>
        </header>
        <!-- Left side column. contains the logo and sidebar -->
        <partial name="_Sidebar" />
        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <partial name="_CookieConsentPartial" />
            <!-- Content Header (Page header) -->
            <section class="content-header">
                <h1>
                    @ViewData["Title"]
                    <small>@ViewData["SubTitle"]</small>
                </h1>
                <ol class="breadcrumb">
                    @if (ViewContext.RouteData.Values["controller"].ToString() != "Home")
                    {
                        <li><a asp-controller="Home" asp-action="Index">Inicio</a></li>
                    }
                    @if (ViewContext.RouteData.Values["action"].ToString() != "Index")
                    {
                        <li><a asp-controller="@ViewContext.RouteData.Values["controller"]" asp-action="Index">@ViewContext.RouteData.Values["controller"]</a></li>
                    }
                </ol>
                <hr style="margin-bottom:0; margin-top:10px; border:1px solid #d2d6de" />
            </section>
            <!-- Main content -->
            <section class="content">
                @RenderBody()
            </section>
            <!-- /.content -->
        </div>
        <!-- /.content-wrapper -->
        <footer class="main-footer">
            <div class="pull-right hidden-xs">
                <b>Version</b> 0.0.1
            </div>
            <strong>SICE &copy; @DateTime.Now.Year</strong>
        </footer>
        <!-- Control Sidebar -->
        <partial name="_ControlSidebar" />
        <!-- /.control-sidebar -->
        <!-- Add the sidebar's background. This div must be placed immediately after the control sidebar -->
        <div class="control-sidebar-bg"></div>
    </div>
    <!-- ./wrapper -->

    <environment include="Development">
        <!-- jQuery -->
        <script src="~/lib/jquery/jquery.js"></script>
        <!-- Bootstrap -->
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
        <!-- AdminLTE -->
        <script src="~/lib/admin-lte/js/adminlte.js"></script>
        <!-- DataTables -->
        <script src="~/lib/datatables/js/jquery.dataTables.js"></script>
        <script src="~/lib/datatables/js/dataTables.bootstrap.js"></script>

        <script src="~/js/site.js" asp-append-version="true"></script>
    </environment>
    <environment exclude="Development">
        <!-- jQuery -->
        <script src="~/lib/jquery/jquery.min.js"></script>
        <!-- Bootstrap -->
        <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
        <!-- AdminLTE -->
        <script src="~/lib/admin-lte/js/adminlte.min.js"></script>
        <!-- DataTables -->
        <script src="~/lib/datatables/js/jquery.dataTables.min.js"></script>
        <script src="~/lib/datatables/js/dataTables.bootstrap.min.js"></script>
        <script src="~/js/site.min.js" asp-append-version="true"></script>
    </environment>
    @RenderSection("Scripts", required: false)
</body>
</html>
